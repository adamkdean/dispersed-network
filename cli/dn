#!/bin/bash
#   __   __  __  ___ __  __  ___ __
#  |  \|/__`|__)|__ |__)/__`|__ |  \
#  |__/|.__/|   |___|  \.__/|___|__/
#              ______    __  __
#         |\ ||__  ||  |/  \|__)|__/
#         | \||___ ||/\|\__/|  \|  \
#
# dispersed network proof of concept
# (C) 2017 Adam K Dean <akd@dadi.co>

# load the config
source "${0%/*}/../config/config.sh"

#
# helpers
#
load_config() {
  if [[ ! -f "App.config" ]]; then
    echo "error: App.config not found"
    exit 1
  else
    # read whitelisted config values
    while read -r KEY VALUE; do
      case $KEY in
        APP_NAME)
          APP_NAME=$VALUE
          ;;
        APP_HOSTNAME)
          APP_HOSTNAME=$VALUE
          ;;
      esac
    done < "App.config"
    
    # check all the mandatory ones exist
    if [ -z $APP_NAME ]; then
      echo "error: APP_NAME not defined"
      exit 1
    fi
    if [ -z $APP_HOSTNAME ]; then
      echo "error: APP_HOSTNAME not defined"
      exit 1
    fi
  fi
}

api_get_route() {
  echo "$1 $2"
  
  CURL_URL="$CONTROL_ADDRESS/$1"
  if [ ! -z $2 ]; then 
    CURL_URL="$CURL_URL/$2"
  fi
  
  RESULT=$(
    curl \
      --silent \
      --request GET \
      --header "Authorization:$CONTROL_AUTH_TOKEN" \
      $CURL_URL)
  CURL_EXIT_CODE=$?
  
  if [ $CURL_EXIT_CODE -eq 0 ]; then
    echo "$RESULT"
  else
    echo "control server did not respond (exit code $CURL_EXIT_CODE)"
  fi
}

api_post_route() {
  echo "$1 $APP_NAME"
  
  RESULT=$(
    curl \
      --silent \
      --request POST \
      --d $2 \
      --header "Authorization:$CONTROL_AUTH_TOKEN" \
      $CONTROL_ADDRESS/$1)
  CURL_EXIT_CODE=$?
  
  if [ $CURL_EXIT_CODE -eq 0 ]; then
    echo "$RESULT"
  else
    echo "control server did not respond (exit code $CURL_EXIT_CODE)"
  fi
}

#
# commands
#
build() {
  load_config
  
  # ensure we have a Dockerfile
  if [[ ! -f "Dockerfile" ]]; then
    echo "error: Dockerfile not found"
    exit 1
  fi
  
  # build docker image
  docker build --tag $REGISTRY_DOMAIN/$APP_NAME .
}

create() {
  load_config
  api_post_route \
    create \
    "{\"name\":\"$APP_NAME\",\"hostname\":\"$APP_HOSTNAME\"}"
}

help() {
  echo ""
  echo "Usage: dn COMMAND"
  echo ""
  echo "Commands:"
  echo "  build       build application"
  echo "  create      create new application"
  echo "  help        show usage"
  echo "  list        list applications"
  echo "  push        push changes to application"
  echo "  remove      remove application"
  echo "  restart     restart application"
  echo "  run         run application"
  echo "  start       start application"
  echo "  status      show application status"
  echo "  stop        stop application"
  echo "  version     show version"
  exit 0
}

list() {
  api_get_route list
}

push() {
  load_config
  
  # login to docker repo
  docker login \
    --username=$REGISTRY_USER \
    --password=$REGISTRY_PASS \
    $REGISTRY_DOMAIN

  # push docker image
  echo "pushing "$REGISTRY_DOMAIN/$APP_NAME""
  docker push "$REGISTRY_DOMAIN/$APP_NAME"
}

remove() {
  if [ -z $1 ]; then load_config; fi
  api_get_route remove ${1:-$APP_NAME}
}

restart() {
  if [ -z $1 ]; then load_config; fi
  api_get_route restart ${1:-$APP_NAME}
}

run() {
  build
  push
  create
  start
}

start() {
  if [ -z $1 ]; then load_config; fi
  api_get_route start ${1:-$APP_NAME}
}

status() {
  if [ -z $1 ]; then load_config; fi
  api_get_route status ${1:-$APP_NAME}
}

stop() {
  if [ -z $1 ]; then load_config; fi
  api_get_route stop ${1:-$APP_NAME}
}

version() {
  echo "dn v$VERSION"
  exit 0
}

#
# parse arguments
#
while (( $# > 0 ))
do
  opt="$1"
  shift

  case $opt in
    build)
      build
      ;;
    help|--help)
      help
      ;;
    list)
      list
      ;;
    push)
      push 
      ;;
    remove)
      remove $1
      ;;
    restart)
      restart $1
      ;;
    run)
      run
      ;;
    start)
      start $1
      ;;
    status)
      status $1
      ;;
    stop)
      stop $1
      ;;
    version|-v|--version)
      version
      ;;
    --*)
      echo "Invalid option: '$opt'" >&2
      exit 1
      ;;
    *)
      break;
      ;;
  esac
done